{
  "manifest_version": 3,
  "name": "Chat Timestamp Injector",
  "version": "1.0.0",
  "description": "Automatically prepends a local timestamp to ChatGPT messages",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["https://openai.com/chat*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "https://openai.com/chat*",
    "https://chat.openai.com/*"
  ]
}

